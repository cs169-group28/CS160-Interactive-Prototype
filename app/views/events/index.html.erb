<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <div class="nav-collapse collapse">
       
        <li class="brand">EventPlanner</li>
        
        <div class="nav">
          <li class="active">
            <a href="#">Home</a>
          </li>
          <li><a href="#">Events</a></li>
          <li><a href="#">Templates</a></li>
        </div>

        <p class="navbar-text pull-right">
          Logged in as 
          <a href="#" class="navbar-link">Username</a>
        </p>

      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h1>
        <%= image_tag("placeholder.png", :alt => "rss feed", :style => "vertical-align:text-bottom") %> John Smith
      </h1>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span9">
      <div id="event_list">
        <h1>Listing events</h1>
        <table class="table table-striped table-hover">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @events.each do |event| %>
          <tr>
            <td><h4><%= event.id %></h4></td>
            <td><h4><%= event.name %></h4></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>

        <br />

        <div id="overlay" class="web_dialog_overlay"></div>
        
        <div id="dialog" class="web_dialog">
          <div></div>
        </div>


        <%= link_to('New Event', new_event_path, :id => 'btn', :remote => true, :class => "btn btn-large btn-primary") %>
      </div>
    </div>
  </div>
</div>



